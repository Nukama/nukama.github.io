---
layout: null
permalink: /feed.xml
---

<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0"
  xmlns:content="http://purl.org/rss/1.0/modules/content/"
  xmlns:wfw="http://wellformedweb.org/CommentAPI/"
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
  xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
  >
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl }}" rel="self" type="application/rss+xml" />
    <link>{{ site.baseurl }}/</link>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <language>en-US</language>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <description>{{ site.description | xml_escape }}</description>
    <image>
      <description>Qubes OS Project</description>
      <url>{{ "/attachment/icons/128x128/apps/qubes-logo-icon.png" | prepend: site.baseurl }}</url>
      <!--https://github.com/QubesOS/qubes-artwork/raw/master/icons/512x512/apps/qubes-logo-icon.png</url> -->
      <title>Qubes OS - Secure open-source desktop operating system</title>
      <link>{{ site.baseurl }}/</link>
      <width>64</width>
      <height>64</height>
    </image>
    {% for post in site.posts %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <link>{{ post.url | prepend: site.baseurl }}</link>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <dc:creator>{{ post.author }}</dc:creator>
      {% for tag in post.tags %}
      <category>{{ tag | xml_escape }}</category>
      {% endfor %}
      {% for cat in post.categories %}
      <category>{{ cat | xml_escape }}</category>
      {% endfor %}
      <guid isPermaLink="true">{{ post.url | prepend: site.baseurl }}</guid>
      <description>{{ post.content | xml_escape }}</description>
    </item>
    {% endfor %}
  </channel>
</rss>
